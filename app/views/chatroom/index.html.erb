<h4 class="ui center aligned medium icon header">
  <i class="circular purple rocketchat icon"></i>
  Friends
</h4>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui small feed">
          <% if @messages.any? %>
            <%= render @messages %>
          <% end %>
        </div>
        <div class="extra content">
        <%= form_for(@message, html: {class: 'ui reply form', role: 'form'}, url: message_path ) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body %>
              <%= f.button '<i class="icon bordered inverted purple edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item active">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>


